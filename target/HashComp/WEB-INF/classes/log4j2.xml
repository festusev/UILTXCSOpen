<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" name="TXCSOpen">
    <Properties>
        <Property name="logDir">/usr/share/jetty9/logs/</Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFileAppender" fileName="${logDir}/2020.txcs_open.log"
                     filePattern="${logDir}/2020.txcs_open-%d{yyyy-MM-dd}.log" immediateFlush="true">
            <PatternLayout>
                <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    <Loggers>

        <Root level="DEBUG">
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>