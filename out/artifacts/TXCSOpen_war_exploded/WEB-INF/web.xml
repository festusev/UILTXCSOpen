<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>TXCSOpen</display-name>
  <listener>
    <listener-class>Outlet.ContextListener</listener-class>
  </listener>
  <context-param>
    <param-name>log4j-config-location</param-name>
    <param-value>WEB-INF/log4j2.properties</param-value>
  </context-param>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>Outlet.Login</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <!--<servlet>
    <servlet-name>Outlet.Register</servlet-name>
    <servlet-class>Outlet.Register</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>-->
  <servlet>
    <servlet-name>Console</servlet-name>
    <servlet-class>Outlet.Console</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Scoreboard</servlet-name>
    <servlet-class>Outlet.Scoreboard</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>Outlet.Logout</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>CreateTeam</servlet-name>
    <servlet-class>Outlet.CreateTeam</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JoinTeam</servlet-name>
    <servlet-class>Outlet.JoinTeam</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>UpdateUserPassword</servlet-name>
    <servlet-class>Outlet.UpdateUserPassword</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>UpdateTeamPassword</servlet-name>
    <servlet-class>Outlet.UpdateTeamPassword</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>Outlet.DeleteUser</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Submit</servlet-name>
    <servlet-class>Outlet.Submit</servlet-class>
    <load-on-startup>1</load-on-startup>
    <multipart-config>
      <location>/usr/share/jetty9/TXCSSubmissions/</location>
      <max-file-size>10485760</max-file-size>
      <max-request-size>10485760</max-request-size>
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet>
    <servlet-name>Challenge</servlet-name>
    <servlet-class>Outlet.Challenge</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Rules</servlet-name>
    <servlet-class>Outlet.Rules</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <!--<servlet-mapping>
    <servlet-name>Outlet.Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>-->
  <servlet-mapping>
    <servlet-name>Console</servlet-name>
    <url-pattern>/console</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateTeam</servlet-name>
    <url-pattern>/create-team</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JoinTeam</servlet-name>
    <url-pattern>/join-team</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateTeamPassword</servlet-name>
    <url-pattern>/update-team-pass</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateUserPassword</servlet-name>
    <url-pattern>/update-user-pass</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/delete-user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Scoreboard</servlet-name>
    <url-pattern>/scoreboard</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Submit</servlet-name>
    <url-pattern>/submit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Challenge</servlet-name>
    <url-pattern>/challenge</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Rules</servlet-name>
    <url-pattern>/rules</url-pattern>
  </servlet-mapping>
</web-app>