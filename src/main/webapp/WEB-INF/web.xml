<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>TXCSOpen</display-name>
  <listener>
    <listener-class>Outlet.ContextListener</listener-class>
  </listener>

  <!-- Error Pages -->
  <error-page>
    <error-code>404</error-code>
    <location>/Error404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/Error403.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/Error500.jsp</location>
  </error-page>
  <error-page>
    <location>/ErrorDefault.jsp</location>
  </error-page>

  <!-- Servlets -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>Outlet.Login</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Outlet.Register</servlet-name>
    <servlet-class>Outlet.Register</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Outlet.Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Profile</servlet-name>
    <servlet-class>Outlet.Profile</servlet-class>
    <load-on-startup>1</load-on-startup>
    <multipart-config>
      <location>/tmp/</location>
      <max-file-size>10485760</max-file-size>
      <max-request-size>10485760</max-request-size>
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>Profile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>

